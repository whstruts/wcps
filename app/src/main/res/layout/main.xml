<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sysbackcolor"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/clrlistback" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="800dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:scrollbars="none">
            
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:layout_alignParentLeft="true"
            	android:layout_alignParentRight="true"
                android:background="@drawable/clrlistback" >
                
                <LinearLayout 
                    android:id="@+id/linearLayout2"
	                android:layout_width="match_parent"
	                android:layout_height="45dp"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentRight="true"
	                android:layout_alignParentTop="true" 
	                android:background="@drawable/clrlistheadback">
	                <TextView
			            android:id="@+id/tv_qyts"
			            android:layout_width="135dp"
			            android:layout_height="40dp"
			            android:background="@drawable/clsbar"
			            android:layout_marginTop="1dp"
			            android:gravity="center"
			            android:text="区域"
			            android:textColor="#6959CD"
			            android:textSize="25dp" />
	                
	                <TextView
			            android:id="@+id/tv_qyts3"
			            android:layout_width="135dp"
			            android:layout_height="40dp"
			            android:background="@drawable/clsbar"
			            android:layout_marginTop="1dp"
			            android:gravity="center"
			            android:text="绿色通道"
			            android:textColor="#6959CD"
			            android:textSize="25dp" />
	                
	                <TextView
			            android:id="@+id/tv_qyts5"
			            android:layout_width="135dp"
			            android:layout_height="40dp"
			            android:background="@drawable/clsbar"
			            android:layout_marginTop="1dp"
			            android:gravity="center"
			            android:text="自提出库"
			            android:textColor="#6959CD"
			            android:textSize="25dp" />
	                <TextView
			            android:id="@+id/tv_qyts6"
			            android:layout_width="135dp"
			            android:layout_height="40dp"
			            android:background="@drawable/clsbar"
			            android:layout_marginTop="1dp"
			            android:gravity="center"
			            android:text="普通出库"
			            android:textColor="#6959CD"
			            android:textSize="25dp" />
	                <TextView
			            android:id="@+id/tv_qyts7"
			            android:layout_width="135dp"
			            android:layout_height="40dp"
			            android:background="@drawable/clsbar"
			            android:layout_marginTop="1dp"
			            android:gravity="center"
			            android:text="被动补货"
			            android:textColor="#6959CD"
			            android:textSize="25dp" />
	                <TextView
			            android:id="@+id/tv_qyts8"
			            android:layout_width="135dp"
			            android:layout_height="40dp"
			            android:background="@drawable/clsbar"
			            android:layout_marginTop="1dp"
			            android:gravity="center"
			            android:text="主动补货"
			            android:textColor="#6959CD"
			            android:textSize="25dp" />
	                
	                <TextView
			            android:id="@+id/tv_qyts10"
			            android:layout_width="135dp"
			            android:layout_height="40dp"
			            android:background="@drawable/clsbar"
			            android:layout_marginTop="1dp"
			            android:gravity="center"
			            android:text="正在拣货"
			            android:textColor="#6959CD"
			            android:textSize="25dp" />
	                <TextView
			            android:id="@+id/tv_qyts2"
			            android:layout_width="135dp"
			            android:layout_height="40dp"
			            android:background="@drawable/clsbar"
			            android:layout_marginTop="1dp"
			            android:gravity="center"
			            android:text="盘点作业"
			            android:textColor="#6959CD"
			            android:textSize="25dp" />
	                <TextView
			            android:id="@+id/tv_qyts9"
			            android:layout_width="135dp"
			            android:layout_height="40dp"
			            android:background="@drawable/clsbar"
			            android:layout_marginTop="1dp"
			            android:gravity="center"
			            android:text="入库上架"
			            android:textColor="#6959CD"
			            android:textSize="25dp" />
	                <TextView
			            android:id="@+id/tv_qyts4"
			            android:layout_width="135dp"
			            android:layout_height="40dp"
			            android:background="@drawable/clsbar"
			            android:layout_marginTop="1dp"
			            android:gravity="center"
			            android:text="追加拣货"
			            android:textColor="#6959CD"
			            android:textSize="25dp" />
	            </LinearLayout>

				<ListView
                    android:id="@+id/listView2"
                    android:layout_width="1350dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="450dp"
                    android:layout_marginLeft="-1352dp"
                    android:background="@drawable/clrlistback"
                    android:cacheColorHint="#F0F8FF"
                    android:scrollbars="none" >
                </ListView>

				<ListView
                    android:id="@+id/listView1"
                    android:layout_width="1350dp"
					android:layout_marginTop="50dp"
                    android:layout_marginLeft="-1352dp" 
                    android:background="@drawable/clrlistback"
		            android:cacheColorHint="#F0F8FF" 
		            android:scrollbars="none"
					android:layout_height="400dp">
                </ListView>

			</LinearLayout>
            
        </HorizontalScrollView>
        
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/horizontalScrollView1"
            android:layout_alignRight="@+id/horizontalScrollView1"
            android:layout_below="@+id/horizontalScrollView1"
            android:background="@drawable/clrlistback"
            android:layout_marginTop="2dp" >

            <TextView
                android:id="@+id/tv_zyrwts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="50dp"
                android:textColor="#FF0000"
                android:text="请触摸【刷新】；查看是否有任务"/>

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="1270dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/relativeLayout2"
            android:layout_alignRight="@+id/relativeLayout2"
            android:layout_below="@+id/relativeLayout2"
            android:layout_marginTop="2dp"
            android:background="@drawable/clrlistheadback" >
			<TextView
                android:id="@+id/tv_tsts"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="left"
                android:text="温馨提示:"
                android:textColor="#6959CD"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_ts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_tsts"
                android:ellipsize="marquee"
                android:focusable="true"
                android:gravity="left"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="欢迎使用平板拣货系统,正在连接服务端，请稍等..."
                android:textColor="#6959CD"
                android:textSize="20dp" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/relativeLayout3"
            android:layout_alignRight="@+id/relativeLayout3"
            android:layout_below="@+id/relativeLayout3"
            android:layout_marginTop="5dp" >
            
            <!--  
			Button
                android:id="@+id/bt_blueteeth"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:background="@drawable/clsbtnselect"
                android:gravity="center"
                android:text="蓝牙管理"
                android:textColor="#FFFFFF"
                android:enabled="false"
                android:textSize="25dp" 
			-->
			
			<Button
                android:id="@+id/bt_refresh"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/clsbtnselect"
                android:gravity="center"
                android:text="刷新"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
			<Button
                android:id="@+id/bt_pickwork"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/clsbtnselect"
                android:layout_toRightOf="@+id/bt_refresh"
                android:gravity="center"
                android:text="索取任务"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
			

			<Button
                android:id="@+id/bt_kccx"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/clsbtnselect"
                android:layout_toRightOf="@+id/bt_pickwork"
                android:gravity="center"
                android:text="库存查询"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
			
			<Button
                android:id="@+id/bt_bhwork"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/clsbtnselect"
                android:layout_toRightOf="@+id/bt_kccx"
                android:gravity="center"
                android:text="补货上架"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
			
			<Button
                android:id="@+id/bt_zzxcx"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/clsbtnselect"
                android:layout_toRightOf="@+id/bt_bhwork"
                android:gravity="center"
                android:text="箱号查询"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
			
			<Button
                android:id="@+id/bt_zyjl"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/clsbtnselect"
                android:layout_toRightOf="@+id/bt_zzxcx"
                android:gravity="center"
                android:text="作业记录"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
			<!--  
			Button
                android:id="@+id/bt_Log"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/clsbtnselect"
                android:layout_toRightOf="@+id/bt_zyjl"
                android:gravity="center"
                android:text="日志"
                android:textColor="#FFFFFF"
                android:textSize="25dp" 
                -->
			<Button
                android:id="@+id/bt_pc"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/clsbtnselect"
                android:layout_toRightOf="@+id/bt_zyjl"
                android:gravity="center"
                android:text="动销盘查"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
			<Button
                android:id="@+id/bt_Exit"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/clsbtnselect"
                android:layout_toRightOf="@+id/bt_pc"
                android:gravity="center"
                android:text="退出"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>